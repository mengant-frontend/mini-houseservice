page {
  background: #EFEFF4;
}
/* 顶部区域、搜索、扫描 start */
.header {
  padding: 16rpx 20rpx;
  display: flex;
  align-items: center;
  background-color: #fff;
}
.header .search {
  flex-grow: 1;
  margin: 0 25rpx;
  padding: 0;
  background: #f6f6f6;
  border-radius: 6rpx;
  color: #afafaf;
  display: flex;
  justify-content: center;
  align-items: center;
}
.search-form {
  flex-grow: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}
.header icon {
  margin-right: 11rpx;
}
/* 顶部区域、搜索、扫描 start */
/* 三个菜单 start */
.menu {
  background: #fff;
  display: flex;
}
.menu .item {
  flex-grow: 1;
}
.item-form {
  height: 150rpx;
  /* 暂时定义为 swiper 的一半 */
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.menu image {
  width: 60rpx;
  height: 60rpx;
}
.menu text {
  font-size: 28rpx;
  /* iview 推荐次级标题样式 */
  color: #464c5b;
  font-weight: bold;
}
/* 三个菜单 end */
.join-msg {
  width: 100%;
  padding: 50rpx 25rpx;
  font-size: 12px;
  color: #80848f;
  text-align: center;
  box-sizing: border-box;
}
.red-packet {
  flex-grow: 1;
  flex-shrink: 1;
  height: 100rpx !important;
  line-height: 100rpx !important;
  background-color: #fff !important;
}
