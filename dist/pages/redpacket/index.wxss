page {
  background-color: #f8f8f9;
}
.list {
  padding: 0 25rpx 25rpx;
  width: 100%;
  box-sizing: border-box;
}
.item {
  display: flex;
  flex-direction: row;
  border: none;
  margin-top: 25rpx;
  box-shadow: 0 4px 10px 0 rgba(0, 0, 0, 0.05);
}
.money {
  width: 180rpx;
  height: 180rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border: none;
  background: radial-gradient(circle at 50% 50%, #f8f8f9 0, #f8f8f9 50%, transparent 0), radial-gradient(circle at 50% 50%, #f8f8f9 0, #f8f8f9 50%, transparent 0);
  background-repeat: repeat-y;
  background-size: 60rpx 60rpx;
  background-position: -30rpx 180rpx, -30rpx 0;
  background-color: #ff9900;
  font-size: 16px;
  color: #fff;
  font-weight: bold;
}
.container__message {
  background-color: #fff;
  flex-grow: 1;
  flex-shrink: 1;
  position: relative;
  top: 0;
  left: 0;
  box-sizing: border-box;
}
.message {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding: 0 20rpx;
  border-top-right-radius: 6px;
  border-bottom-right-radius: 6px;
}
.title {
  font-size: 14px;
  color: #1c2438;
  padding-bottom: 20rpx;
}
.desc {
  font-size: 12px;
  color: #80848f;
}
.active {
  position: absolute;
  top: 0;
  right: 0;
  width: 40px;
  height: 40px;
}
.triangle {
  position: absolute;
  z-index: 10;
  left: 0;
  right: 0;
  border-width: 20px;
  border-style: solid;
  border-color: #ed3f14 #ed3f14 transparent transparent;
}
.congtainer__icon {
  position: relative;
  right: 3px;
  top: 3px;
  z-index: 11;
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: flex-end;
  align-items: flex-start;
}
