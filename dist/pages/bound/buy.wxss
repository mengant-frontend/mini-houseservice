page {
  background-color: #fff;
}
.page {
  background-color: #fff;
  box-sizing: border-box;
  padding: 30rpx;
}
.container {
  padding: 0 30rpx;
}
.title {
  font-size: 24rpx;
  color: #000;
  padding: 10rpx 0;
}
.list {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  padding: 30rpx 0;
}
.item {
  margin: 0 15rpx 30rpx;
}
.item.active {
  background-color: #b8e986;
}
.price-container {
  width: 180rpx;
  height: 100rpx;
  border-radius: 10rpx;
  box-shadow: 0 2px 4px 0 #b3d7c6;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.price {
  font-size: 30rpx;
  color: #343434;
}
.active .price {
  color: #417505;
}
.bound {
  font-size: 20rpx;
  color: #bbbbbb;
}
.active .bound {
  color: #a7e16c;
}
.btn {
  background-color: #4fcb9f;
  border-radius: 10rpx;
  font-size: 36rpx;
  color: #fff;
  padding: 20rpx 0;
  text-align: center;
}
