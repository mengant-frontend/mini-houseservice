page {
    /* 以下是使用 tabs-swiper-page 组件需要的样式 */
    height: 100%;
    padding-top: 48px;
    box-sizing: border-box;
}
.page{
  height: 100%;
}
.item{
    display: flex;
    flex-direction: row;
    padding: 15rpx 25rpx;
    background: #fff;
    margin-bottom: 15rpx;
}
.avatar-container{
    width: 100rpx;
}
.avatar{
    width: 80rpx;
    height: 80rpx;
    border-radius: 80rpx;
    border: 1px solid #e9eaec;
    box-sizing: border-box;
}
.header{
    width: 100%;
    height: 80rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
}
.user{
    font-size: 32rpx;
    /*font-weight: bold;*/
    color: #000;
    margin-bottom: 5px;
}
.date{
    font-size: 20rpx;
}
.content{
    margin-top: 10rpx;
}
.title{
    font-size: 32rpx;
    color: #000;
}
.main{
    max-height: 115rpx;
    overflow: hidden;
}
.main-text{
    line-height: 30rpx;
    font-size: 24rpx;
}
.more{
    text-align: right;
    color: #2fb97d;
}
.more-comment{
    text-align: right;
}
.more-comment text{
    margin-left: 5px;
}
.more-comment .comment-more{
    color: #2fb97d;
}
.img-container{
    width: 620rpx;
    display: flex;
    flex-direction: row;
    /*justify-content: space-between;*/
    margin-left: -16rpx;
}
.img{
    width: 180rpx;
    height: 180rpx;
    margin: 10rpx 0 0 26rpx;
    border: 1px solid #e9eaec;
}
.comment-container{

}
.comment-count{
    display: flex;
    flex-direction: row;
    align-items: center;
}
.comment-item{
    margin-top: 5px;
}
.comment-user{
    margin-right: 3px;
    color: #000;
}
.reply{
    margin-right: 3px;
}

.comment-input{
    position: fixed;
    bottom: 0;
    left: 0;
    z-index: 99999;
    width: 100%;
    height: 80rpx;
    background: #fff;
    display: flex;
    flex-direction: row;
    border-top: 1px solid #dddee1;
}
.input-comment{
    flex-grow: 1;
    flex-shrink: 1;
    height: 100%;
    padding: 0 25rpx;
}
.btn-comment{
    flex-grow: 0;
    flex-shrink: 0;
    height: 100%;
    line-height: 80rpx;
    padding: 0 40rpx;
    border-left: 1px solid #dddee1;
    color: #2fb97d;
}