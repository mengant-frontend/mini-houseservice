page {
  width: 100%;
  min-height: 100%;
  background-color: #f8f8f9;
}
.page {
  padding: 25rpx 25rpx;
}
.item {
  margin-bottom: 25rpx;
  box-shadow: 0 4px 10px 0 rgba(0, 0, 0, 0.05);
  padding: 20rpx;
  display: flex;
  flex-direction: row;
}
.photo {
  width: 268rpx;
  height: 160rpx;
  background-color: #fff;
  flex-grow: 0;
  flex-shrink: 0;
  margin-right: 25rpx;
}
image {
  width: 100%;
  height: 100%;
  border-radius: 4px;
}
.content {
  flex-grow: 1;
  flex-shrink: 1;
  display: flex;
  flex-direction: column;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}
.title {
  flex-grow: 1;
  flex-shrink: 1;
  color: #1c2438;
  font-size: 14px;
  font-weight: 600;
  padding-top: 25rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.desc {
  flex-grow: 0;
  flex-shrink: 0;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.price {
  flex-grow: 1;
  flex-shrink: 1;
  color: #ff9900;
  font-size: 16px;
  font-weight: 600;
}
.operate {
  flex-grow: 0;
  flex-shrink: 0;
  display: flex;
  flex-direction: column;
}
.edit,
.delete {
  border-radius: 6rpx;
  text-align: center;
  padding: 15rpx 30rpx;
}
.edit {
  border: 1rpx solid #2d8cf0;
  color: #2d8cf0;
  margin-bottom: 15rpx;
}
.delete {
  border: 1rpx solid #ff9900;
  color: #ff9900;
}
button {
  height: 26px !important;
  line-height: 26px !important;
  margin: 0 !important;
}
.container__add {
  position: fixed;
  bottom: 150rpx;
  right: 50rpx;
  z-index: 9999;
  width: 50px;
  height: 50px;
  background-color: #2d8cf0;
  border-radius: 60px;
  overflow: hidden;
}
.add {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
