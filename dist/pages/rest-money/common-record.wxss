page {
  background: #f8f8f9;
}
.item {
  border-bottom: 1px solid #dddee1;
  padding: 20rpx 25rpx;
  display: flex;
  flex-direction: row;
  box-sizing: border-box;
  align-items: center;
}
.content {
  flex-grow: 1;
  flex-shrink: 1;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.title {
  padding-bottom: 20rpx;
  font-size: 14px;
  color: #1c2438;
  font-weight: 600;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.desc {
  font-size: 12px;
  color: #80848f;
}
.money {
  height: 100%;
  flex-grow: 0;
  flex-shrink: 0;
  white-space: nowrap;
  font-size: 20px;
}
.success {
  color: #19be6b;
}
.fail {
  color: #ed3f14;
}
