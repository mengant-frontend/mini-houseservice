page {
  padding: 20rpx 25rpx;
  box-sizing: border-box;
  background: #f8f8f9;
}
.cell-index--i-cell {
  background-color: rgba(255, 255, 255, 0.4) !important;
}
.container {
  background-color: #fff;
  padding-bottom: 30rpx;
}
.link {
  color: #2d8cf0;
}
.input__money {
  display: flex;
  align-items: center;
  padding-left: 25rpx;
  padding-right: 25rpx;
}
.title {
  color: #1c2438;
  font-size: 14px;
  padding: 12px 15px;
}
.tips {
  padding: 12px 15px;
  font-size: 12px;
  color: #80848f;
}
.container__btn {
  margin-top: 25rpx;
}
input[type=digit] {
  flex-grow: 1;
  font-size: 16px;
}
.card {
  background: #fff;
}
.container__tips {
  margin: 0 15px;
  padding: 24px 0;
  border-top: 1px solid #dddee1;
}
.title__tip {
  font-size: 14px;
  color: #1c2438;
  padding-bottom: 20rpx;
}
.content__tip {
  font-size: 12px;
  color: #80848f;
  line-height: 1.5;
}
