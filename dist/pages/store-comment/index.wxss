page {
  height: 100%;
  box-sizing: border-box;
  /* .comment-total 总高度，剩下空间给 .comment-bar */
  padding-top: 90rpx;
}
.comment-total {
  /* 评论总数固定在屏幕顶部，并且设置具体高度 */
  position: fixed;
  top: 0;
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  padding-left: 25rpx;
}
.comment-bar {
  /* 为 scroll-loading 继承高度 */
  height: 100%;
}
