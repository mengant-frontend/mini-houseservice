.modal {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
}
.mask {
  position: absolute;
  left: 0;
  top: 0;
  z-index: 1000;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.65);
}
.outer {
  position: absolute;
  left: 0;
  top: 0;
  z-index: 1001;
  width: 100%;
  height: 100%;
}
.inner {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.body {
  position: relative;
  left: 0;
  top: -50px;
  width: 100%;
  padding: 0 100rpx;
  box-sizing: border-box;
}
.bg {
  width: 100%;
}
.bg-img {
  width: 100%;
}
.content {
  position: absolute;
  bottom: 20%;
  left: 0;
  width: 100%;
  text-align: center;
  font-size: 24px;
  color: #fff;
}
.title {
  font-size: 18px;
  color: #ff9900;
  margin-bottom: 25rpx;
}
.close-container {
  position: absolute;
  bottom: -50px;
  left: 0;
  width: 100%;
  text-align: center;
}
