<scroll-view
  class='container'
  style='background:{{bgColor}};'
  scroll-y
  bindscrolltolower='scrolltolower'
  bindscroll='scroll'
  scroll-top="{{scrollTop}}"
  scroll-with-animation
>
  <slot></slot>
  <i-load-more tip='{{ifNoMore?no_more:load_more}}' loading='{{ifLoading}}' />
</scroll-view>
