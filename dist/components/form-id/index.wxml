<view class='f-class'>
<form report-submit='{{true}}' bindsubmit='formSubmit' data-index='{{index}}'>
  <view class='form-id__container'>
    <button wx:if='{{btn}}' class="plain-btn" form-type='submit'>
      <view class='plain-btn-container'>
        <slot></slot>
      </view>
    </button>
    <slot wx:else></slot>
  </view>
</form>

<i-message id='formIdMessage'></i-message>
</view>
