.swiper-container {
  width: 750rpx;
  height: 400rpx;
}
.item {
  width: 100%;
  height: 100%;
  position: relative;
  left: 0;
  top: 0;
}
.title {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 68rpx;
  line-height: 68rpx;
  overflow: hidden;
  text-align: center;
  background-color: rgba(0, 0, 0, 0.5);
  color: #fff;
  font-size: 26rpx;
}
.img {
  width: 100%;
  height: 100%;
}
.img__container {
  position: relative;
  left: 0;
  top: 0;
  width: 100%;
}
