        <view class='bg'>
          <image src='/images/red.png' class='bg-img' mode='widthFix' bindload='load'></image>
        </view>
        <view class='content' wx:if='{{load_end}}'>
          <view class='title'>{{title}}</view>
          <text>ï¿¥{{money}}</text>
