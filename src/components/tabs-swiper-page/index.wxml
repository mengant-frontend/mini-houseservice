<i-tabs fixed current='{{tabsCurrent}}' bindchange='tabsChange'>
  <i-tab wx:for='{{tabsList}}' wx:key='name' key='{{index}}' title='{{item.title}}' count='{{item.count}}'></i-tab>
</i-tabs>

<swiper class='swiper bg-color' current='{{tabsCurrent}}' bindchange='tabsChange'>
  <swiper-item wx:for='{{tabsList}}' wx:key='name'>
    <scroll-view class='scroll-view' scroll-y enable-back-to-top bindscrolltolower='scrolltolower'>
      <slot name='{{item.name}}'></slot>

      <!-- 内容区域上拉提示 -->
      <i-load-more tip='{{item.ifNoMore?noMore:loadMore}}' loading='{{ifLoading}}' />
    </scroll-view>
  </swiper-item>
</swiper>