.fixed{
	position: fixed;
	bottom: 170rpx;
	transition: right 1s;
	/* padding: 1px; */
	border-radius: 8rpx;
	box-sizing: border-box;
}
.cover{
	display: inline-block;
	/* padding: 1px; */
	font-size: 0;
}
.container{
	font-size: 26rpx;
	margin: 0 1rpx 2rpx 0;
	/* box-shadow: 0 1rpx 2rpx 0; */
	border-radius: 8rpx;
	padding: 15rpx;
	background: #fff;
	border: 1px solid #EFEFF4;
}
.container:nth-child(0){
	margin-top: 0;
}
.service{
	color: #ff9900;
}
.command{
	color: #2d8cf0;
}