.container {
  background: #fff;
  padding: 15rpx 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.title {
  /* iview 推荐主标题样式 */
  font-size: 32rpx;
  color: #464c5b;
  font-weight: bold;
  /* iview 推荐 primary 主色 */
  border-left: 14rpx solid #2d8cf0;
  padding-left: 20rpx;
}
.else {
  /* iview 推荐次级标题样式，这里不加粗 */
  font-size: 28rpx;
  color: #464c5b;
  margin-right: 5rpx;
}
.arrow:after {
  content: '';
  display: inline-block;
  width: 14rpx;
  height: 14rpx;
  /* 跟随 iview 次级标题颜色 */
  border: 1rpx solid #464c5b;
  border-bottom: none;
  border-left: none;
  transform: rotate(45deg);
  /* 看起来与文字垂直对齐 */
  margin-bottom: 2rpx;
}