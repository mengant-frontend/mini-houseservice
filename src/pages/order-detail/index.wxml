<view class="page" style='padding-bottom: {{current_state === 3 ? "65px" : "120px"}}'>
  <view class="card">
    <i-panel>
      <i-cell-group>
        <i-cell title='{{order_detail.shop_name}}' value='{{state}}'></i-cell>
        <i-cell>
          <view class="flex">
            <view class="flex-img">
              <image class="img" src='/images/avatar.jpg'></image>
            </view>
            <view class="flex-content"></view>
          </view>
        </i-cell>
      </i-cell-group>
    </i-panel>
  </view>
  <view class="card">
    <i-panel title='服务信息' i-class='card-title'>
      <i-cell-group>
        <i-cell title='服务商家'>
          <view slot='footer'>{{order_detail.user_name}}</view>
        </i-cell>
        <i-cell title='服务时间'>
          <view slot='footer'>
            <view class="ellipsis">
              {{order_detail.time_begin}} ~
            </view>
            <view class="ellipsis">
              {{order_detail.time_end}}
            </view>
          </view>
        </i-cell>
        <i-cell title='服务地址'>
          <view slot='footer' class="ellipsis">
            {{order_detail}}
          </view>
        </i-cell>
      </i-cell-group>
    </i-panel>
  </view>

  <view class="card">
    <i-panel title='订单信息' i-class='card-title'>
      <i-cell-group>
        <i-cell title='订单号码' value='{{order_detail.order_number}}'></i-cell>
        <i-cell title='下单时间' value='{{order_detail.order_time}}'></i-cell>
      </i-cell-group>
    </i-panel>
  </view>

  <view class="card">
    <i-panel>
      <i-cell-group>
        <i-cell title='商家是否已联系' only-tap-footer>
          <picker slot='footer' bindchange='bindPicker' range='{{picker_options}}' value='{{picker_selected}}'>
            <view>
              <text>{{picker_selected}}</text>
              <i-icon type='enter'></i-icon>
            </view>
          </picker>
        </i-cell>
      </i-cell-group>
    </i-panel>
  </view>

  <view class="fixed">
    <i-button type='primary' long>确认付款</i-button>
    <i-button type='ghost' long>协商</i-button>
  </view>

  <i-message id='message'></i-message>
</view>