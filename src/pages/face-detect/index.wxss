page {
  height: 100%;
}

.detect-bar,
.warn-bar {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.camera-bar,
.warn-bar .img {
  margin-top: 200rpx;
}
.detect-bar .btn-detect,
.warn-bar .btn-turn-back {
  padding: 0 80rpx;
  line-height: 2.4;
  font-size: 32rpx;
  border-radius: 8rpx;
}
.camera-bar {
  width: 375rpx;
  height: 375rpx;
}
.detect-bar .camera  {
  width: 100%;
  height: 100%;
}
.detect-bar .btn-detect {
  margin-top: 80rpx;
  background: #2d8cf0;
  color: #fff;
}
.warn-bar .img {
  width: 200rpx;
  height: 200rpx;
}
.warn-bar .warn-text {
  margin-top: 50rpx;
  /* iview 推荐主标题样式 */
  font-size: 32rpx;
  font-weight: bold;
  color: #464c5b;
}
.warn-bar .btn-turn-back {
  margin-top: 120rpx;
  background: #FFFFFF;
  border: 1rpx solid #BFBFBF;
  box-shadow: 0 1px 2px 0 #BFBFBF;
  color: #BFBFBF;
}

.success-bar {
  position: relative;
  height: 100%;
  box-sizing: border-box;
  padding-bottom: 140rpx;
  background: #EFEFF4;
}
.success-bar .btn-confirm {
  position: absolute;
  bottom: 30rpx;
  left: 50rpx;
  width: 650rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 32rpx;
  border-radius: 8rpx;
  background: #2d8cf0;
  color: #fff;
}
.success-bar .tip {
  line-height: 2.4;
  padding-left: 25rpx;
}
.success-bar .store-info,
.success-bar .store-order {
  display: flex;
  align-items: center;
  padding: 15rpx 35rpx;
  background: #fff;
  border-top: 1rpx solid #dddee1;
  /* iview 推荐次级标题大小 */
  font-size: 28rpx;
}
.success-bar .icon-bar {
  width: 90rpx;
}
.success-bar .title {
  /* iview 推荐主标题样式 */
  font-size: 32rpx;
  font-weight: bold;
  color: #464c5b;
}
.success-bar .icon-phone {
  width: 40rpx;
  height: 40rpx;
  padding: 10rpx;
}
.success-bar .order-bar {
  padding: 15rpx 0;
  line-height: 1.8;
  display: flex;
  flex-direction: column;
}
.success-bar .icon-success {
  width: 40rpx;
  height: 40rpx;
  box-sizing: border-box;
  border-radius: 50%;
  border: 5rpx solid #D8D8D8;
  margin: 10rpx;
}