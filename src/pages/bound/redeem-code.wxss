page{
    width: 100%;
    height: 100%;
}
.page{
    width: 100%;
    height: 100%;
    background-color: #f8f8f8;
    padding: 30rpx 0;
    box-sizing: border-box;
}

.container{
    width: 690rpx;
    margin: 0 auto;
    background-color: #fff;
    padding: 30rpx;
    box-sizing: border-box;
    border-radius: 10rpx;
}
.title{
    font-size: 26rpx;
    color: #4fcb9f;
    line-height: 60rpx;
    margin-top: 15rpx;
}
.input-container{
    margin-top: 20rpx;
}
.input{
    height: 90rpx;
    line-height: 90rpx;
    border-bottom: 1px solid #d5d5d5;
    font-size: 40rpx;
}
.btn-container{
    margin-top: 50rpx;
    margin-bottom: 20rpx;
}
.btn{
    width: 100%;
    height: 60rpx;
    line-height: 60rpx;
    background-color: #4fcb9f;
    border-radius: 10rpx;
    color: #fff;
    font-size: 30rpx;
    padding: 15rpx 0;
    text-align: center;
}