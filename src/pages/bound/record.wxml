<view class="container">
    <tabs-swiper-page tabs-list='{{tabs_list}}' bind:swiperChange='swiperChange'>
        <scroll-loading bg-color='#EFEFF4' wx:for='{{tabs_list}}' wx:key='id' slot='{{item.id}}' if-no-more='{{item.if_no_more}}' if-loading='{{if_loading}}' bind:scrolltolower='getOrderList'>
            <view class="list">
                <view class="item" wx:for="{{5}}" wx:for-item="itm" wx:for-index="idx">
                    <view class="img-container">
                        <image src="/images/mi.jpg" class="img"></image>
                    </view>
                    <view class="desc">
                        <view class="title ellipsis">
                            <text>小米移动电源2C移动电源</text>
                        </view>
                        <view class="bound">
                            <text>19999积分</text>
                        </view>
                        <view class="operator">
                            <view class="operator-left">
                                <text>x1</text>
                            </view>
                            <view class="operator-right">
                                <view class="btn common">
                                    <text>查看物流</text>
                                </view>
                                <view class="btn primary">
                                    <text>确认收货</text>
                                </view>
                            </view>
                        </view>
                    </view>
                </view>
            </view>
        </scroll-loading>
    </tabs-swiper-page>
</view>