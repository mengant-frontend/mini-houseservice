.container{
    position: fixed;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    box-sizing: border-box;
    padding-top: 245rpx;
}
.list{
    /*padding-bottom: 100rpx;*/
}
.item{
    display: flex;
    flex-direction: row;
    align-items: center;
    padding: 20rpx 30rpx;
    border-bottom: 1rpx solid #ddd;
}
.bound{
    width: 150rpx;
    font-size: 30rpx;
    color: #343434;
}
.desc{
    flex-grow: 1;
    flex-shrink: 1;
    margin-left: 20rpx;
}
.title{
    font-size: 24rpx;
    color: #000;
}
.date{
    font-size: 20rpx;
    color: #777;
    margin-top: 5rpx;
}