page{
    padding-bottom: 100rpx;
    box-sizing: border-box;
}
.list{

}
.item{
    padding: 30rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    border-bottom: 1rpx solid #ddd;
}
.desc{
    flex-grow: 1;
    flex-shrink: 1;
}
.user{
    display: flex;
    flex-direction: row;
}
.name{
    font-size: 24rpx;
    color: #343434;
}
.phone{
    margin-left: 20rpx;
    font-size: 24rpx;
    color: #a9a9a9;
}
.address{
    font-size: 24rpx;
    color: #343434;
    margin-top: 10rpx;
}
.operator{
    flex-grow: 0;
    flex-shrink: 0;
}
.operator-container{
    display: inline-block;
    position: relative;
}
.operator-container::before{
    content: " ";
    position: absolute;
    left: 0;
    top: 0;
    width: 2rpx;
    height: 100%;
    background-color: #747474;
}
.operator-text{
    padding-left: 20rpx;
    position: relative;
    color: #747474;
    line-height: 1;
}
.bottom-element{
    position: fixed;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 100rpx;
}
.btn{
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    color: #fff;
    background-color: #4fcb9f;
}
