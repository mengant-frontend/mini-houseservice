page {
  /* 以下是使用 tabs-swiper-page 组件需要的样式 */
  height: 100%;
  padding-top: 42px;
  box-sizing: border-box;
}

.list{
	background-color: #F3F3F3;
	
}
.item{
	display: flex;
	flex-direction: row;
	padding: 30rpx;
	background-color: #fff;
	margin-bottom: 20rpx;
}
.left{
	flex-grow: 1;
	flex-shrink: 1;
	padding-right: 30rpx;
}
.title{
	width:  100%;
	height: 80rpx;
	font-size: 32rpx;
	color: #272727;
	font-weight: 600;
	overflow: hidden;
  text-overflow:ellipsis;
	-webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}
.date{
	color: #acacac;
	font-size: 28rpx;
	padding-top: 16rpx;
}
.read{
	color: #272727;
	font-size: 28rpx;
	padding-top: 16rpx;
}
.right{
	width: 222rpx;
	height: 169rpx;
	flex-shrink: 0;
}
.img{
		width: 100%;
		height: 100%;
}