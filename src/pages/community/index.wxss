page {
  /* 以下是使用 tabs-swiper-page 组件需要的样式 */
  height: 100%;
  padding-top: 42px;
  box-sizing: border-box;
}

/* 列表 start */
.item {
  background: #fff;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #dddee1;
  display: flex;
  align-items: center; 
}
.item .info {
  margin-left: 30rpx;
  flex-grow: 1;
  display: flex;
  flex-direction: column;
}
.item .title {
  margin-bottom: 12rpx;
  /* iview 推荐主标题样式 */
  font-size: 32rpx;
  font-weight: bold;
  color: #464c5b;
}
.item .date-num {
  line-height: 1;
  display: flex;
  align-items: center;
}
.item .date {
  margin-right: 40rpx;
}
/* 列表 end */