.page{

}
.list{
    width: 750rpx;
    box-sizing: border-box;
    padding: 0 30rpx;
}
.item{
    display: flex;
    flex-direction: row;
    padding: 30rpx 0;
    border-bottom: 1rpx solid rgba(238, 238, 238, .3);
}
.item-img{
    flex-grow: 0;
    flex-shrink: 0;
    border-radius: 100rpx;
    border: 1px solid rgba(238, 238, 238, .3);
    overflow: hidden;
}
.img{
    width: 100rpx;
    height: 100rpx;
}

.item-desc{
    flex-grow: 1;
    flex-shrink: 1;
    padding-left: 20rpx;
}
.title{
    font-size: 28rpx;
    color: #000;
}
.item-sub{
    display: flex;
    flex-direction: row;
}
.price{
    font-size: 24rpx;
    color: #a9a9a9;
    text-decoration: line-through;
}
.bound{
    font-size: 24rpx;
    color: #f08e33;
}
.sub-left{
    flex-grow: 1;
    flex-shrink: 1;
}
.sub-right{
    flex-grow: 0;
    flex-shrink: 0;
}
.btn{
    font-size: 24rpx;
    color: #4fcb9f;
    padding: 8rpx 16rpx;
    border: 1rpx solid #4fcb9f;
    border-radius: 5px;

}