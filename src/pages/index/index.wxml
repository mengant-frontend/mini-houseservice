<view class='header'>
  <picker mode='region' value='{{location}}' bindchange='locationChoose'>
    <f-form-id>
      <view>
        {{location[2]}}
        <i-icon type='unfold' size='12' color='rgba(0,0,0,0.65)'></i-icon>
      </view>
    </f-form-id>
  </picker>
  <navigator class='search' url='/pages/search/index'>
    <f-form-id class='search-form'>
      <view>
        <icon type='search' size='12' color='#bbbbbb' />
        搜索
      </view>
    </f-form-id>
  </navigator>
  <navigator url='/pages/face-detect/index' wx:if='{{village === 1}}'>
    <i-icon type='scan' size='30' color='#000000'></i-icon>
  </navigator>
</view>

<banner-img list='{{banner_img}}'></banner-img>

<view class='join-msg' wx:if='{{join_msg.length > 0}}'>
  {{join_msg}}
</view>

<navigator url='/pages/redpacket/tip'>
  <f-form-id>
    <i-notice-bar icon="systemprompt" loop speed='{{notice_content.length > 30 ? 1000 : 2000}}' wx:if='{{notice_content}}'>
      【红包攻略】{{notice_content}}
    </i-notice-bar>
  </f-form-id>
</navigator>
<view class='menu'>
  <navigator class='item' url='/pages/service/index?service_type=2'>
    <f-form-id>
      <view class='item-form'>
        <image mode='aspectFit' src='/images/house.png' />
        <text>家政服务</text>
      </view>
    </f-form-id>
  </navigator>
  <navigator class='item' url='/pages/service/index?service_type=1'>
    <f-form-id>
      <view class='item-form'>
        <image mode='aspectFit' src='/images/maintain.png' />
        <text>维修服务</text>
      </view>
    </f-form-id>
  </navigator>
  <navigator class='item' url='/pages/service-rank/index'>
    <f-form-id>
      <view class="item-form">
        <image mode='aspectFit' src='/images/rank.png' />
        <text>服务排行</text>
      </view>
    </f-form-id>
  </navigator>
</view>

<demand-hall></demand-hall>
<carousel list="{{list}}"></carousel>
<service-title-bar service-type='2'></service-title-bar>
<service-list list='{{house_service_list}}' wx:if='{{house_service_list.length > 0}}'></service-list>

<service-title-bar service-type='1'></service-title-bar>
<service-list list='{{maintain_service_list}}' wx:if='{{maintain_service_list.length > 0}}'></service-list>
<i-message id="message"></i-message>

<red-packet-modal wx:if='{{red_money > 0}}' money='{{red_money}}' title='首次登陆奖励' bind:close='closeRedPacketModal'></red-packet-modal>
