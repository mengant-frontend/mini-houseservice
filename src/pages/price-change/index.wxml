<view class="page">
  <i-panel title='修改价格'>
    <i-cell-group>
      <i-cell title='原价格'>
        <view slot='footer' class="footer">
          <view class="ellipsis">
            ￥{{origin_price}}
          </view>
        </view>
      </i-cell>
      <i-cell title='修改后价格'>
        <input slot='footer' data-form_key='money' bindchange='bindFormChange' placeholder="请输入修改后价格，单位: 元"></input>
      </i-cell>
      <i-cell title='备注'>
        <view class="container__textarea">
          <f-textarea maxLength='100' data-form_key='price_remark' bind:update='bindFormChange'></f-textarea>
        </view>
      </i-cell>
    </i-cell-group>
  </i-panel>

  <view class="fixed">
    <i-button type='primary' long bind:click='confirm'>确定修改</i-button>
    <i-button type='ghost' long i-class='btn__cancel' bind:click='cancelModify'>取消修改</i-button>
  </view>
</view>