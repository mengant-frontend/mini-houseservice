    </i-cell-group>
  </i-panel>

  <i-panel>
    <i-cell-group>
      <i-cell title='提现记录' is-link></i-cell>
      <i-cell title='收支明细' is-link></i-cell>
    </i-cell-group>
  </i-panel>

  <view id='message'></view>
</view>