<view class="page">
  <view class="container">
    <view wx:if='{{has_shop}}' class="shoper">
      <view class="left divider">
        <view class="main">
          <view class="title">
            <text>余额</text>
          </view>
          <view class="content">
            <text>￥201800.10</text>
          </view>
        </view>
      </view>
      <view class="right">
        <view class="main">
          <view class="title">
            <text>保证金</text>
          </view>
          <view class="content">
            <text>￥2018.10</text>
          </view>
        </view>
      </view>
    </view>
    <view wx:else class="user">
      <view class="left text-left">
        <view class="main">
          <view class="title">
            <text>余额</text>
          </view>
          <view class="content">
            <text>￥201800.10</text>
          </view>
        </view>
      </view>
    </view>
